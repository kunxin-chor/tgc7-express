{{#extends "base"}}
  {{#block "content"}}
    <form method="POST">
      <div class="alert alert-danger">
        Are you sure you want to delete the pet {{pet.name}}?
        <div>
            <input type="submit" class="btn btn-danger" value="Yes"/>
            <a href="/pets" class="btn btn-success">No</a>
        </div>
      </div>
    </form>
  {{/block}}
{{/extends}}